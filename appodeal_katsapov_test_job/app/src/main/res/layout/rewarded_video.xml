<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rewardedVideoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/initRewardedVideoSdkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="initRewardedVideoSdkButton"
        android:layout_margin="5dp"
        android:text="@string/initRewardedVideoSdkButton"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/rewardedVideoShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rewardedVideoShowButton"
            android:text="@string/rewardedVideoShowButton"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>

